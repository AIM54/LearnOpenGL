<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_test_opengl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_opengl" />

    <Button
        android:id="@+id/bt_test_glsurface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_glsurface" />

    <Button
        android:id="@+id/bt_image_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/image_list" />

    <Button
        android:id="@+id/bt_offline"
        android:text="@string/offline_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>